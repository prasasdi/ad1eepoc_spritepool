<Window x:Class="MainAplikasi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainAplikasi"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResize">
    <Grid>
        <!-- Loading Sprite -->
        <Image x:Name="SpriteLoadingImg"
               Width="64" Height="64"
               Source="{Binding LoadingSprite.SpriteFrame}"
               VerticalAlignment="Center" HorizontalAlignment="Left"
               Margin="10">
            <Image.RenderTransform>
                <RotateTransform Angle="{Binding LoadingSprite.RotationAngle}" CenterX="32" CenterY="32"/>
            </Image.RenderTransform>
        </Image>

        <!-- Run Sprite -->
        <Image x:Name="RunSpritesImg"
               Width="64" Height="64"
               Source="{Binding RunSprite.SpriteFrame}"
               VerticalAlignment="Bottom" HorizontalAlignment="Right"
               Margin="10">
            <Image.RenderTransform>
                <RotateTransform Angle="{Binding RunSprite.RotationAngle}" CenterX="32" CenterY="32"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
